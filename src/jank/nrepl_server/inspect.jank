(ns nrepl-server.inspect)

(cpp/raw "
#include <iomanip>
#include <sstream>

namespace nrepl_server::inspect
{
  std::string int_to_hex_string(int i)
  {
    return std::format(\"0x{:x}\", i);
  }
}
")

(defn int->hex-string [i]
  (cpp/nrepl_server.inspect.int_to_hex_string i))

(defn inspect-str
  "Inspect a value to build a display string for CIDER."
  [x]
  (pr-str
   `("--- Type"
     (:newline)
     (:value ~(type x))
     (:newline) (:newline)
     "--- Contents"
     (:newline)
     (:value ~(pr-str x))
     (:newline) (:newline)
     "--- Hash"
     (:newline)
     (:value ~(int->hex-string (hash x))))))
